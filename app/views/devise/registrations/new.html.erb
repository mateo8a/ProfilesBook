<h2>Sign up</h2>

<div class="row">
  <div class="col-xs-4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
  <%= devise_error_messages! %>

      <%= f.input :first_name, input_html: { autofocus: true } %>

      <%= f.input :last_name %>

      <%= f.input :profile_name %>

      <%= f.input :email %>

      <%= f.input :password, hint: '6 characters minimum', input_html: { autocomplete: "off" } %>

      <%= f.input :password_confirmation, input_html: { autocomplete: "off" } %>

    <div class="actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
